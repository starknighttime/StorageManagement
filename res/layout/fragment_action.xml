<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/bt_import"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:onClick="onTabSwitched"
        android:scaleType="fitXY"
        android:src="@drawable/bt_import" />

    <ImageView
        android:id="@+id/bt_export"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:onClick="onTabSwitched"
        android:scaleType="fitXY"
        android:src="@drawable/bt_export" />

    <ImageView
        android:id="@+id/bt_receive"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:onClick="onTabSwitched"
        android:scaleType="fitXY"
        android:src="@drawable/bt_receive" />

    <ImageView
        android:id="@+id/bt_post"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="1dp"
        android:adjustViewBounds="true"
        android:onClick="onTabSwitched"
        android:scaleType="fitXY"
        android:src="@drawable/bt_post" />

</LinearLayout>